<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/darkGrey"
    tools:context=".CreateProduct">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/green">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vends un article"
            android:textColor="@color/white"
            android:layout_marginTop="40dp" />
        <Button
            android:id="@+id/addImageButton"
            android:text="Ajouter photo"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:background="@color/green">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre"
            android:textColor="@color/white" />
        <EditText
            android:id="@+id/editTextProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Exemple : Pelle avec un manche en bois."
            android:textColorHint="@color/white"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description de l’article"
            android:textColor="@color/white"
            android:layout_marginTop="20dp" />
        <EditText
            android:id="@+id/editTextProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Exemple : Pelle neuve légère avec un manche en bois, prix non négociable."
            android:textColorHint="@color/white"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix"
            android:textColor="@color/white"
            android:layout_marginTop="20dp" />
        <EditText
            android:id="@+id/editTextProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/addProductButton"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="Ajouter"
        android:textAllCaps="false"
        android:backgroundTint="@color/green"
        android:layout_marginTop="50dp">
    </Button>

</androidx.appcompat.widget.LinearLayoutCompat>